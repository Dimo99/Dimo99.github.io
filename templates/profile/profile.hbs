<section id="viewProfile">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{name}}</h2>
            {{#if isFollowing}}
                <a id="btnFollow" class="chirp-author" href="#/unfollow?username={{name}}">Unfollow</a>
            {{else}}
                <a id="btnFollow" class="chirp-author" href="#/follow?username={{name}}">Follow</a>
            {{/if}}
            <div id="userProfileStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> | <span>{{followingCount}} following</span> |
                <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="profileChirps" class="chirps"><h2 class="titlebar">Chirps</h2>
            {{#each chrips}}
                <article class="chirp">
                    <div class="titlebar">
                        <a href="#" class="chirp-author">{{name}}</a>
                        <span class="chirp-time">{{date}}</span>
                    </div>
                    <p>{{text}}</p>
                </article>
            {{else}}
                <div class="chirp"><span class="loading">No chirps in database</span></div>
            {{/each}}
        </div>
    </div>
</section>